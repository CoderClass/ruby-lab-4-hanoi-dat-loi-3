<h1>Room: <%= @room.name %></h1>
<div class="messages">
  <%= render @messages %>
</div>

<%= form_for [@room, @message] do |f| %>
  <div class="form-inline">
    <%= f.text_field :content, placeholder: "Message...", class: 'form-control', required: true %>
    <%= f.submit "Send as #{current_username}", class: 'btn btn-secondary' %>
  </div>
<% end %>

<script type="text/javascript" charset="utf-8">
  setInterval(updateMessagesViaJSON, 3000);
</script>
